model Students {
  roll_no  Int @id @default(autoincrement())
  name String 
  department String 
  sem String
  routines Rutine[]
}

model Rutine {
   id String @id @default(uuid())
   subject String 
   day String 
   time DateTime @default(now())
   st_id Int
   Student Students @relation(fields: [st_id],references: [roll_no])

}